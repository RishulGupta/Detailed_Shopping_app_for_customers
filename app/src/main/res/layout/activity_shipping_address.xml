<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui_layer.sheets.activity_viewmodel_ui.shipping_address_activity.ShippingAddressActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Shipping"
        android:textColor="@color/hint"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:drawableStart="@drawable/back_ic"
        android:drawablePadding="12dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="Return to cart"
        android:textColor="@color/hint"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20sp"
            android:layout_marginTop="12dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/textView3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Contact Information"
                    android:textColor="@color/hint"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.6"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="@string/already_have_an_account_login"
                    android:textAlignment="textEnd"
                    android:textColor="@color/hint"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13sp"
                android:background="@drawable/input_white_bg_theme_border"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:paddingHorizontal="8dp"
                android:paddingVertical="12dp"
                android:textColor="@color/black"
                android:textColorHint="@color/dark_hint"
                android:textSize="11sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="18sp"
                android:fontFamily="@font/montserrat_bold"
                android:text="Contact Information"
                android:textColor="@color/hint"
                android:textSize="12sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_white_bg_theme_border"
                android:fontFamily="@font/montserrat_regular"
                android:hint="Country Region"
                android:inputType="text"
                android:paddingHorizontal="8dp"
                android:paddingVertical="12dp"
                android:textColor="@color/black"
                android:textColorHint="@color/dark_hint"
                android:textSize="11sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/input_white_bg_theme_border"
                    android:fontFamily="@font/montserrat_regular"
                    android:hint="First Name"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="9dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/hint"
                    android:textSize="11sp" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/input_white_bg_theme_border"
                    android:fontFamily="@font/montserrat_regular"
                    android:hint="Last Name"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="9dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/hint"
                    android:textSize="11sp" />

            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_white_bg_theme_border"
                android:fontFamily="@font/montserrat_regular"
                android:hint="Address"
                android:inputType="textPostalAddress"
                android:paddingHorizontal="8dp"
                android:layout_marginTop="20sp"
                android:paddingVertical="12dp"
                android:textColor="@color/black"
                android:textColorHint="@color/dark_hint"
                android:textSize="11sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/input_white_bg_theme_border"
                    android:fontFamily="@font/montserrat_regular"
                    android:hint="City"
                    android:paddingHorizontal="8dp"
                    android:inputType="text"
                    android:paddingVertical="9dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/hint"
                    android:textSize="11sp" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/input_white_bg_theme_border"
                    android:fontFamily="@font/montserrat_regular"
                    android:hint="Postal Code"
                    android:paddingHorizontal="8dp"
                    android:inputType="number"
                    android:paddingVertical="9dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/hint"
                    android:textSize="11sp" />

            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_white_bg_theme_border"
                android:fontFamily="@font/montserrat_regular"
                android:hint="Contact Number"
                android:inputType="phone"
                android:paddingHorizontal="8dp"
                android:layout_marginTop="20sp"
                android:paddingVertical="12dp"
                android:textColor="@color/black"
                android:textColorHint="@color/dark_hint"
                android:textSize="11sp" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:text="Save this information for next time"
                android:layout_marginTop="20sp"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="12sp"
                android:textStyle="bold"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20sp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="6dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Contact"
                            android:textSize="11sp"
                            android:fontFamily="@font/montserrat_regular"
                            android:textColorHint="@color/dark_hint"
                            android:textStyle="bold"
                            android:layout_weight="1"
                            android:textColor="@color/dark_hint"
                            android:layout_marginHorizontal="12dp"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Change"
                            android:fontFamily="@font/montserrat_regular"
                            android:textSize="11sp"
                            android:textColorHint="@color/dark_hint"
                            android:textStyle="bold"
                            android:layout_weight="1"
                            android:textAlignment="textEnd"
                            android:textColor="@color/dark_hint"
                            android:layout_marginHorizontal="12dp"/>

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/hint"
                        android:layout_marginHorizontal="12dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="6dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Ship to"
                            android:fontFamily="@font/montserrat_regular"
                            android:textColorHint="@color/dark_hint"
                            android:textStyle="bold"
                            android:textSize="11sp"
                            android:layout_weight="1"
                            android:textColor="@color/dark_hint"
                            android:layout_marginHorizontal="12dp"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Change"
                            android:fontFamily="@font/montserrat_regular"
                            android:textColorHint="@color/dark_hint"
                            android:textStyle="bold"
                            android:textSize="11sp"
                            android:layout_weight="1"
                            android:textAlignment="textEnd"
                            android:textColor="@color/dark_hint"
                            android:layout_marginHorizontal="12dp"/>

                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="18sp"
                android:fontFamily="@font/montserrat_bold"
                android:text="Shipping Method"
                android:textColor="@color/hint"
                android:textSize="12sp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RadioGroup
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <RadioButton
                                android:layout_width="0dp"
                                android:layout_height="32sp"
                                android:layout_weight="1"
                                android:text="Standard FREE delivery over Rs:4500"
                                android:textColor="@color/dark_hint"
                                android:textStyle="bold"
                                android:textSize="11sp"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:text="FREE"
                                android:textColor="@color/dark_hint"
                                android:fontFamily="@font/montserrat_bold"
                                android:textSize="13sp"
                                android:textAlignment="textEnd"
                                android:layout_marginEnd="6dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="3dp"
                            android:orientation="horizontal">
                            <RadioButton
                                android:layout_width="0dp"
                                android:layout_height="32sp"
                                android:layout_weight="1"
                                android:text="Cash on delivery over Rs:4500 (Free Delivery, COD processing fee only)"
                                android:textColor="@color/dark_hint"
                                android:textStyle="bold"
                                android:textSize="11sp"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:text="100"
                                android:textColor="@color/dark_hint"
                                android:fontFamily="@font/montserrat_bold"
                                android:textSize="13sp"
                                android:layout_marginTop="3dp"
                                android:textAlignment="viewEnd"
                                android:layout_marginEnd="6dp"/>
                        </LinearLayout>

                    </RadioGroup>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/continue_to_shipping_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="16dp"
                app:cornerRadius="12dp"
                android:backgroundTint="@color/hint"
                android:text="Continue to Shipping"
                android:fontFamily="@font/montserrat_regular"
                android:textStyle="bold"
                android:letterSpacing="0.03"/>

        </LinearLayout>
    </ScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>