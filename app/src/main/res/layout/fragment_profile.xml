<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui_layer.sheets.fragment_viewmodel_ui.profile.ProfileFragment">


    <ImageView
        android:id="@+id/bg_design"
        android:layout_width="175dp"
        android:layout_height="137dp"
        android:rotation="180"
        android:src="@drawable/ellipse2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ellipse2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv"
        android:layout_width="97dp"
        android:layout_height="97dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="61dp"
        android:backgroundTint="@color/black"
        app:cardCornerRadius="97dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/profile_pic_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/netflix1" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="38dp"
        android:layout_marginTop="26dp"
        app:layout_constraintTop_toBottomOf="@+id/cv">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Rishul"
                android:background="@drawable/input_white_bg_theme_border"
                android:padding="12dp"
                android:layout_marginEnd="8dp"
                android:inputType="textPersonName"
                android:textColor="@color/dark_hint"
                android:textSize="13sp"
                android:fontFamily="@font/montserrat_regular"
                android:textStyle="bold"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="textPersonName"
                android:text="Gupta"
                android:background="@drawable/input_white_bg_theme_border"
                android:layout_marginStart="8dp"
                android:padding="12dp"
                android:textColor="@color/dark_hint"
                android:textSize="13sp"
                android:fontFamily="@font/montserrat_regular"
                android:textStyle="bold"/>

        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RishulGupta@gmail.com"
            android:background="@drawable/input_white_bg_theme_border"
            android:padding="12dp"
            android:textColor="@color/dark_hint"
            android:inputType="textEmailAddress"
            android:layout_marginTop="18sp"
            android:textSize="13sp"
            android:fontFamily="@font/montserrat_regular"
            android:textStyle="bold"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="9999999911"
            android:background="@drawable/input_white_bg_theme_border"
            android:padding="12dp"
            android:textColor="@color/dark_hint"
            android:inputType="phone"
            android:layout_marginTop="18sp"
            android:textSize="13sp"
            android:fontFamily="@font/montserrat_regular"
            android:textStyle="bold"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A-420 / Gulab gully, Prem Mohalla, Mumbai"
            android:background="@drawable/input_white_bg_theme_border"
            android:padding="12dp"
            android:textColor="@color/dark_hint"
            android:layout_marginTop="18sp"
            android:textSize="13sp"
            android:inputType="textPostalAddress"
            android:fontFamily="@font/montserrat_regular"
            android:textStyle="bold"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/logout_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18sp"
            app:cornerRadius="12dp"
            android:textSize="14sp"
            android:text="Log Out"
            android:fontFamily="@font/montserrat_regular"
            android:textStyle="bold"
            android:backgroundTint="@color/theme"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/edit_profile_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18sp"
            app:cornerRadius="12dp"
            android:textSize="14sp"
            android:text="Edit Profile"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:fontFamily="@font/montserrat_regular"
            android:textStyle="bold"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>